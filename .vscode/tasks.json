{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev-server",
            "detail": "Start development server",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "echo 'done'",
            "dependsOn": [
                "symfony-dev",
                "encore-dev"
            ]
        },
        {
            "label": "symfony-dev",
            "detail": "Start php web server",
            "type": "shell",
            "group": {
                "kind": "test",
            },
            "command": "symfony",
            "args": [
                "server:start",
                "--dir=/usr/local/src/public",
            ],
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "encore-dev",
            "detail": "Start encore hot reload server",
            "type": "shell",
            "group": {
                "kind": "test",
            },
            "command": "npm run dev-server",
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "analyse code",
            "type": "shell",
            "command": "vendor/bin/psalm",
            "args": [
                "-c=psalm.xml",
            ],
            "problemMatcher": {
                "owner": "psalm",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(ERROR):\\s([^\\s]+)\\s-\\s([^:]+):([0-9]+):([0-9]+)\\s-\\s(.+)$",
                    "file": 3,
                    "line": 4,
                    "column": 5,
                    "severity": 1,
                    "message": 6,
                    "code": 2
                }
            },
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "install composer dependencies",
            "type": "shell",
            "group": {
                "kind": "build",
            },
            "command": "composer install",
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "install dependencies",
            "type": "shell",
            "group": {
                "kind": "build",
            },
            "command": "npm install",
            "dependsOn": [
                "install composer dependencies",
            ],
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "run tests",
            "type": "shell",
            "group": "test",
            "command": "${workspaceFolder}/bin/phpunit",
            "args": [
                "--testsuite=default"
            ],
            "dependsOn": [
                "build encore",
            ],
            "presentation": {
                "clear": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "build encore",
            "type": "shell",
            "group": "build",
            "command": "npm run build",
            "presentation": {
                "clear": true,
                "showReuseMessage": false
            }
        },
    ]
}