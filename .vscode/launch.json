{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "hostname": "localhost",
            "port": 9003,
            "log": false,
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "max_children": 10000,
                "max_data": 10000,
                "show_hidden": 1
            },
        },
        {
            "name": "Run tests in debug mode",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/bin/phpunit",
            "args": [
                "${file}",
            ],
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "runtimeExecutable":"php",
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ]
        }
    ]
}